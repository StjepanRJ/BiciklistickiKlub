@{
    ViewBag.Title = "Pošalji Email";
}

<h2>Pošalji Email</h2>

@using (Html.BeginForm("SendEmail", "Gmail", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("ToEmail", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="email" name="toEmail" class="form-control" required />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Subject", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="subject" class="form-control" required />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Message", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea name="message" class="form-control" required></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Pošalji" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
        
        
    </div>
}