@using BiciklistickiKlub.Models
@model Korisnik

@{
    ViewBag.Title = "Azuriraj";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Azuriraj</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "Ispravite podatke!");

    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.Aktivan, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.CheckBoxFor(model => model.Aktivan)
                @Html.ValidationMessageFor(model => model.Aktivan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SifraOvlasti, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                <label class="radio-inline">
                    @Html.RadioButtonFor(model => model.SifraOvlasti, "MO") Moderator
                </label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(model => model.SifraOvlasti, "AD") Admin
                </label>
                @Html.ValidationMessageFor(model => model.SifraOvlasti)
            </div>
        </div>

        <div class="form-group">

            <div class="col-sm-10">

                @Html.ValidationMessageFor(model => model.KorisnickoIme, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.KorisnickoIme)
            </div>
        </div>
        <div class="form-group">

            <div class="col-sm-10">

                @Html.ValidationMessageFor(model => model.Prezime, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Prezime)
            </div>
        </div>
        <div class="form-group">

            <div class="col-sm-10">

                @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Ime)
            </div>
        </div>
        <div class="form-group">

            <div class="col-sm-10">

                @Html.ValidationMessageFor(model => model.Lozinka, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Lozinka)
            </div>
        </div>


        <div class="form-group">

            <div class="col-sm-10">

                @Html.ValidationMessageFor(model => model.LozinkaUnos, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.LozinkaUnos)
            </div>
        </div>
        <div class="form-group">

            <div class="col-sm-10">

                @Html.ValidationMessageFor(model => model.LozinkaUnos2, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.LozinkaUnos2)
            </div>
        </div>




        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-floppy-disk" aria-hidden="false"></span> Spremi
                </button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Povratak bez spremanja", "Index", "Korisnici")
</div>
