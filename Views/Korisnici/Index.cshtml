    <td>
        <a href="@Url.Action("Azuriraj","Lijecnicki", new {PrezimeIme = kor.KorisnickoIme})" class="btn btn-success ">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Kreiranje novog pregleda
        </a>
    </td>
        -->
                </tr>
            
        }

    </tbody>
</table>

