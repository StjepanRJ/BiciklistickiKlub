
@{
    ViewBag.Title = "NovaTema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BiciklistickiKlub.Models.Tema

<h2>Nova Tema</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        @Html.LabelFor(m => m.Naslov)
        @Html.TextBoxFor(m => m.Naslov)
        @Html.ValidationMessageFor(model => model.Naslov, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            @Html.ValidationMessageFor(model => model.KategorijaId, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.KategorijaId)
        </div>
    </div>

    <div>
        <input type="submit" value="Kreiraj" />
    </div>
}

@Html.ActionLink("Povratak bez spremanja", "Index", "Forum")



